#include <stdio.h>
#include <stdlib.h>

int main()
{
	int dataNasc=0, idade=0, anoatu;
	char nome[50];
	
	printf("Digite seu nome\n");
	scanf("%s", nome);
	
	printf("Digite o ano de nascimento\n");
	scanf("%d", &dataNasc);
	

	idade = (2020 - dataNasc);
	
	printf("Ei, %s ,este ano voce completa(ou) %d anos!\n", nome, idade);
	
	return 0;	
	
	
}
